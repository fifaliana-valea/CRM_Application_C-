@model crmcsharp.Models.request.AuthRequest

@{
    Layout = null;
    ViewBag.Title = "Login";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .login-container {
        background-color: #ffffff;
        padding: 40px 30px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 420px;
        transition: transform 0.3s ease;
    }

    .login-container:hover {
        transform: translateY(-5px);
    }

    .login-container h2 {
        margin-bottom: 10px;
        font-weight: 700;
        color: #2c3e50;
        text-align: center;
        font-size: 28px;
    }

    .login-container p {
        text-align: center;
        color: #7f8c8d;
        font-size: 15px;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #34495e;
        font-size: 14px;
    }

    .form-group input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e6ed;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s ease;
        background-color: #f8fafc;
    }

    .form-group input:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        background-color: #fff;
    }

    .text-danger {
        font-size: 13px;
        color: #e74c3c;
        margin-top: 5px;
        display: block;
    }

    input[type="submit"] {
        background: linear-gradient(to right, #3498db, #2c80c9);
        color: white;
        border: none;
        padding: 14px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
        margin-top: 10px;
    }

    input[type="submit"]:hover {
        background: linear-gradient(to right, #2c80c9, #3498db);
        box-shadow: 0 6px 8px rgba(52, 152, 219, 0.3);
        transform: translateY(-2px);
    }

    .footer-text {
        margin-top: 30px;
        font-size: 13px;
        text-align: center;
        color: #95a5a6;
    }

    .logo {
        text-align: center;
        margin-bottom: 20px;
    }

    .logo img {
        height: 50px;
    }

    .forgot-password {
        text-align: right;
        margin-top: -15px;
        margin-bottom: 20px;
    }

    .forgot-password a {
        color: #7f8c8d;
        font-size: 13px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .forgot-password a:hover {
        color: #3498db;
    }
</style>

<div class="login-container">
    <h2>Connexion</h2>
    <p>Veuillez entrer vos identifiants pour accéder à votre tableau de bord CRM.</p>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username">Nom d'utilisateur</label>
            <input asp-for="Username" type="text" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Mot de passe</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <input type="submit" value="Se connecter" />
    </form>

    <div class="footer-text">
        © 2025 - CRM CSharp. Tous droits réservés.
    </div>
</div>
