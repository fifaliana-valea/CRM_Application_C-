@model crmcsharp.Models.entity.RateConfig

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create New Rate";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Rate"></label>
                    <input asp-for="Rate" class="form-control" type="number" step="0.01" min="0.01" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedAt"></label>
                    <input asp-for="CreatedAt" type="date" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}