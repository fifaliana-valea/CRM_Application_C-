@model List<crmcsharp.Models.TicketHisto>

@{
    ViewData["Title"] = "Liste des tickets";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h1>Liste des tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Sujet</th>
            <th>Statut</th>
            <th>Priorité</th>
            <th>Manager</th>
            <th>Client</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.Subject</td>
                <td>@ticket.Status</td>
                <td>@ticket.Priority</td>
                <td>@ticket.Manager?.Username</td>
                <td>@ticket.Customer?.Name</td>
                <td>
                    <!-- Bouton "Voir les détails" -->
                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-info">Voir les détails</a>

                    <!-- Formulaire de suppression -->
                    <form asp-action="Delete" asp-controller="Ticket" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce ticket ?');" style="display:inline;">
                        <input type="hidden" name="ticketId" value="@ticket.Id" />
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>