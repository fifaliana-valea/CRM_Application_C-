@model crmcsharp.Models.entity.LeadExpenseFormModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Modifier la Dépense";
    var leadId = Model.LeadId;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Modifier la Dépense</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="LeadId" />
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label">Montant</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">€</span>
                                </div>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a asp-action="Details" asp-controller="Lead" asp-route-id="@leadId" class="btn btn-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}