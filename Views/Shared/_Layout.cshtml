<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM Pro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary top-navbar shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-cog me-2"></i>CRM 
            </a>
            
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item mx-1">
                        <a class="nav-link px-3" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-home me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link px-3" asp-controller="Ticket" asp-action="Index">
                            <i class="fas fa-ticket-alt me-1"></i> Tickets
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link px-3" asp-controller="Lead" asp-action="Index">
                            <i class="fas fa-lead-alt me-1"></i> Leads
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link px-3" asp-controller="RateConfigMvc" asp-action="Index">
                            <i class="fas fa-chart-line me-1"></i> Rate Config
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-1">
                        <a class="nav-link px-3 text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid main-content">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-light py-3 border-top">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    &copy; 2025 CRM Professional - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">v2.1.0 | @DateTime.Now.ToString("MMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>